{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "quotes": ["error", "single"],
        "no-console": "error",
        "object-curly-spacing": ["error", "always", { "arraysInObjects": true }],
        "no-multiple-empty-lines": ["error", {
            "max": 1,
            "maxEOF": 1
        }]
    },
    "ignorePatterns": ["**/*.css", "webpack-config"]
}
